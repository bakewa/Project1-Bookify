<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="leftnav">
      <a>
        <%= link_to 'Home', root_path %>
        <%= link_to 'Authors', authors_path %> 
        <%= link_to 'New Author', new_author_path %> 
        <%= link_to 'Works', works_path %>
        <%= link_to 'New Work', new_work_path %> 
    </div>

<!-- If the current user is an admin, the All users will appear in the nav bar and they will be able to see all users currently signed up to the app -->
      <div class="topnav">
          <% if @current_user.present? %>
          <% if @current_user.admin? %> 
            <%= link_to "All users", users_path %> 
          <% end %>

          <%= link_to "Sign out #{ @current_user.email }", login_path, :method => 'delete' %>
      <% else %>
          <%= link_to 'Sign up', new_user_path %>
          <%= link_to 'Sign in', login_path %>
      <% end %>
      </div>
    <%= yield %>
    </div>
    </nav>
    </a>
  </body>
</html>

